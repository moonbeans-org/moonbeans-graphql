{
  "family": "moonbeans-tasks",
  "networkMode": "bridge",
  "containerDefinitions": [
      {
          "name": "watcher",
          "image": "748459872289.dkr.ecr.us-east-1.amazonaws.com/watcher:latest",
          "cpu": 512,
          "memory": 1024,
          "portMappings": [
            {
              "containerPort": 3000,
              "hostPort": 3000,
              "protocol": "tcp"
            },
            {
              "containerPort": 8080,
              "hostPort": 8080,
              "protocol": "tcp"
            }
          ],
          "essential": true,
          "environment": [
            {
              "name": "ENV_FILE",
              "value": ".env"
            }
          ],
          "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/watcher-task-definition",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "ecs"
            }
          }
      }
  ]
}