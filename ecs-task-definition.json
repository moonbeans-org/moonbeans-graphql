{
  "family": "moonbeans-tasks",
  "taskRoleArn": "ecsTaskExecutionRole",
  "executionRoleArn": "ecsTaskExecutionRole",
  "networkMode": "awsvpc",
  "containerDefinitions": [
      {
          "name": "watcher",
          "image": "748459872289.dkr.ecr.us-east-1.amazonaws.com/watcher:latest",
          "cpu": 256,
          "memory": 512,
          "entryPoint": ["node", "watcher.js"],
          "portMappings": [
            {
              "containerPort": 3000,
              "hostPort": 3000,
              "protocol": "tcp"
            },
            {
              "containerPort": 8080,
              "hostPort": 8080,
              "protocol": "tcp"
            },
            {
              "containerPort": 5432,
              "hostPort": 5432,
              "protocol": "tcp"
            }
          ],
          "essential": true,
          "environment": [
            {
              "name": "ENV_FILE",
              "value": ".env"
            }
          ],
          "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/watcher-task-definition",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "ecs"
            }
          },
          "healthCheck": {
              "command": [
                "CMD-SHELL",
                "curl -f http://localhost:8080/ || exit 1"
              ],
              "interval": 30,
              "timeout": 10,
              "retries": 5,
              "startPeriod": 60
          }
      }
  ]
}