{
  "family": "moonbeans-tasks",
  "networkMode": "bridge",
  "containerDefinitions": [
      {
          "name": "watcher",
          "image": "748459872289.dkr.ecr.us-east-1.amazonaws.com/watcher:latest",
          "cpu": 256,
          "memory": 512,
          "portMappings": [
            {
              "containerPort": 3000,
              "hostPort": 3000,
              "protocol": "tcp"
            },
            {
              "containerPort": 8080,
              "hostPort": 8080,
              "protocol": "tcp"
            }
          ],
          "essential": true,
          "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/watcher-task-definition",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "ecs"
            }
          },
          "healthCheck": {
            "command": [
                "CMD-SHELL",
                "curl -f http://localhost:8080/ || exit 1"
            ],
            "interval": 10,
            "timeout": 10,
            "retries": 3,
            "startPeriod": 30
        }
      }
  ]
}