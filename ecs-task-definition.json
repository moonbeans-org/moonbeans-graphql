{
  "family": "moonbeans-tasks",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::748459872289:role/ecsTaskExecutionRole",
  "containerDefinitions": [
      {
          "name": "watcher",
          "image": "748459872289.dkr.ecr.us-east-1.amazonaws.com/watcher:latest",
          "portMappings": [
            {
              "containerPort": 3000,
              "protocol": "tcp"
            },
            {
              "containerPort": 8080,
              "protocol": "tcp"
            }
          ],
          "essential": true,
          "logConfiguration": {
            "logDriver": "awslogs",
            "options": {
              "awslogs-group": "/ecs/watcher-serverless",
              "awslogs-region": "us-east-1",
              "awslogs-stream-prefix": "ecs"
            }
          }
      }
  ]
}